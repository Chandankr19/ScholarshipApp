<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="390dp"
    android:layout_height="280dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/recCard"
    android:layout_marginHorizontal="10dp"
    android:layout_marginVertical="3dp"
    app:cardCornerRadius="20dp"
    app:cardElevation="3.5dp"
    app:cardUseCompatPadding="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="260dp">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/recImage"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:padding="9dp"
            android:scaleType="centerCrop"
            android:src="@drawable/uploadimg"
            app:shapeAppearanceOverlay="@style/roundedImageViewRounded" />

        <TextView
            android:id="@+id/recTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_marginTop="10dp"
            android:layout_toEndOf="@id/recImage"
            android:text="Title"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="20sp"/>

        <TextView
            android:id="@+id/recLang"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/recTitle"
            android:layout_marginStart="5dp"
            android:layout_marginTop="10dp"
            android:layout_toEndOf="@id/recImage"
            android:text="Language"
            android:textStyle="italic"
            android:textColor="@color/black"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/recDesc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/recImage"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"
            android:maxLines="3"
            android:text="Desciption"
            android:textColor="@color/black"
            android:textSize="15sp"/>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_alignTop="@id/recDesc"
            android:layout_marginTop="80dp"
            android:text="VIEW  SCHOLARSHIP"
            android:textSize="15sp"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:background="@color/lavender"
            android:layout_marginStart="10dp"
            android:paddingTop="5dp"
            android:layout_marginEnd="10dp"/>


        <!--<Button
            android:id="@+id/ViewScholarship"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:text="View Scholarship"
            android:layout_marginTop="200dp"
            android:layout_marginStart="10dp"
            android:textSize="15sp"/>-->

    </RelativeLayout>

</androidx.cardview.widget.CardView>